PROJECT_NAME="Aspacelife Text Detection Service (OCR)"
DESCRIPTION="API for extracting text from images using Tesseract OCR"
VERSION="1.0.0"

HOST="0.0.0.0"
PORT=6000

CORS_ORIGINS=["*"]

MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["png","jpg","jpeg","tiff","bmp","gif"]
UPLOAD_DIR="uploads"

DEFAULT_LANGUAGE="eng"
TESSERACT_CMD=""

LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
KAFKA_BROKERS_URL=["localhost:9092"]
KAFKA_TOPIC="ocr_results"